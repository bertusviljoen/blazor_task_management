@rendermode @(new InteractiveServerRenderMode(prerender: false))

<FluentButton Class="show-chatbot" title="Show chatbot" @onclick="ShowChatbot">
    <FluentIcon Value="@(new Icons.Regular.Size24.Chat())" />
</FluentButton>

@if (ShowChat)
{
    <CascadingValue Value="@HideChatbot">
        <Chatbot />
    </CascadingValue>
}

@code {
    private bool ShowChat { get; set; }

    private void ShowChatbot()
    {
        ShowChat = true;
        StateHasChanged();
    }

    private void HideChatbot()
    {
        ShowChat = false;
        StateHasChanged();
    }
}