@page "/"

@using task_management.Shared.Models
@using task_management.Web.Services
@rendermode InteractiveServer
@inject ITaskBoardService TaskBoardApi

<PageTitle>Dashboard</PageTitle>

<h1>Dashboard</h1>

@if (taskBoards == null)
{
    <FluentProgressRing />
}
else
{
    @foreach (var board in taskBoards)
    {
        <div class="board-section">
            <FluentLabel Typo="Typography.H4" Style="margin: 1rem 0;">@board.Name</FluentLabel>
            <div class="metrics-grid">
                <FluentCard Class="metric-card">
                    <div Style="padding: 16px; display: flex; flex-direction: column; gap: 12px;">
                        <div class="icon-header" style="display: flex; align-items: center; gap: 8px;">
                            <FluentLabel Typo="Typography.H4" Underline="true">
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    Task Status
                                </div>
                            </FluentLabel>
                        </div>
                        <div class="metric-row" style="display: flex; align-items: center; gap: 8px;">
                            <FluentLabel>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <FluentIcon Value="@(new Icons.Regular.Size16.List())" />
                                    Total Tasks: @board.Tasks.Count
                                </div>
                            </FluentLabel>
                        </div>
                        <div class="metric-row" style="display: flex; align-items: center; gap: 8px;">
                            <FluentLabel>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <FluentIcon Value="@(new Icons.Regular.Size16.ArrowCircleRight())" />
                                    In Progress: @board.Tasks.Count(t => t.Status == TaskItemStatus.InProgress)
                                </div>
                            </FluentLabel>
                        </div>
                        <div class="metric-row" style="display: flex; align-items: center; gap: 8px;">
                            <FluentLabel>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <FluentIcon Value="@(new Icons.Regular.Size16.CheckmarkCircle())" />
                                    Completed: @board.Tasks.Count(t => t.Status == TaskItemStatus.Done)
                                </div>
                            </FluentLabel>
                        </div>
                    </div>
                </FluentCard>

                <FluentCard Class="metric-card">
                    <div Style="padding: 16px; display: flex; flex-direction: column; gap: 12px;">
                        <div class="icon-header">
                            <FluentIcon Value="@(new Icons.Regular.Size20.Alert())" />
                            <FluentLabel Typo="Typography.H6">Priority Overview</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.AlertUrgent())" Color="Color.Error" />
                            <FluentLabel>High Priority: @board.Tasks.Count(t => t.Priority == TaskItemPriority.High)
                            </FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.Alert())" Color="Color.Warning" />
                            <FluentLabel>Medium Priority: @board.Tasks.Count(t => t.Priority == TaskItemPriority.Medium)
                            </FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.AlertSnooze())" Color="Color.Success" />
                            <FluentLabel>Low Priority: @board.Tasks.Count(t => t.Priority == TaskItemPriority.Low)</FluentLabel>
                        </div>
                    </div>
                </FluentCard>

                <FluentCard Class="metric-card">
                    <div Style="padding: 16px; display: flex; flex-direction: column; gap: 12px;">
                        <div class="icon-header">
                            <FluentIcon Value="@(new Icons.Regular.Size20.Calendar())" />
                            <FluentLabel Typo="Typography.H6">Time Analysis</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.CalendarError())" Color="Color.Error" />
                            <FluentLabel>Overdue Tasks: @board.Tasks.Count(t => t.DueDate.HasValue && t.DueDate.Value.Date <
                        DateTime.Today)</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.CalendarToday())" Color="Color.Warning" />
                            <FluentLabel>Due Today: @board.Tasks.Count(t => t.DueDate.HasValue && t.DueDate.Value.Date ==
                        DateTime.Today)</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.CalendarWorkWeek())" />
                            <FluentLabel>Due This Week: @board.Tasks.Count(t => t.DueDate.HasValue && t.DueDate.Value.Date <=
                        DateTime.Today.AddDays(7))</FluentLabel>
                        </div>
                    </div>
                </FluentCard>

                <FluentCard Class="metric-card">
                    <div Style="padding: 16px; display: flex; flex-direction: column; gap: 12px;">
                        <div class="icon-header">
                            <FluentIcon Value="@(new Icons.Regular.Size20.History())" />
                            <FluentLabel Typo="Typography.H6">Recent Activity</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.ArrowSync())" />
                            <FluentLabel>Active Tasks: @board.Tasks.Count(t => t.Status != TaskItemStatus.Done)</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.CheckmarkCircle())" />
                            <FluentLabel>Completed Tasks: @board.Tasks.Count(t => t.Status == TaskItemStatus.Done)</FluentLabel>
                        </div>
                    </div>
                </FluentCard>

                <FluentCard Class="metric-card">
                    <div Style="padding: 16px; display: flex; flex-direction: column; gap: 12px;">
                        <div class="icon-header">
                            <FluentIcon Value="@(new Icons.Regular.Size20.DataTrending())" />
                            <FluentLabel Typo="Typography.H6">Performance</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.Flowchart())" />
                            <FluentLabel>Completion Rate: @GetBoardCompletionRate(board)%</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.Timer())" />
                            <FluentLabel>On-Time Completion: @GetBoardOnTimeCompletionRate(board)%</FluentLabel>
                        </div>
                    </div>
                </FluentCard>

                <FluentCard Class="metric-card">
                    <div Style="padding: 16px; display: flex; flex-direction: column; gap: 12px;">
                        <div class="icon-header">
                            <FluentIcon Value="@(new Icons.Regular.Size20.Info())" />
                            <FluentLabel Icon="@(new Icons.Regular.Size20.Info())" Typo="Typography.H6">Board Details
                            </FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.TextDescription())" />
                            <FluentLabel>Description: @(board.Description ?? "No description")</FluentLabel>
                        </div>
                        <div class="metric-row">
                            <FluentIcon Value="@(new Icons.Regular.Size16.Clock())" />
                            <FluentLabel>Last Updated: @(board.Tasks.Any() ? board.Tasks.Max(t => t.DueDate)?.ToString("d") ??
                        "N/A" : "N/A")</FluentLabel>
                            </div>
                        </div>
                    </FluentCard>
                </div>
            </div>
    }
}

<style>
    .board-section {
        margin-bottom: 2rem;
    }

    .metrics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        padding: 1rem;
        /*background: #f0f0f0;*/
        /* Replace with your desired color */
        border-radius: 8px;
    }

    .metric-card {
        min-height: 180px;
        /*background: #f0f0f0;*/
        /* Replace with your desired color */
    }
</style>

@code {
    private TaskBoardDto[] taskBoards;

    protected override async Task OnInitializedAsync()
    {
        var restTaskBoards = await TaskBoardApi.GetAllTaskBoardsAsync();
        taskBoards = restTaskBoards.ToArray();
    }

    private double GetBoardCompletionRate(TaskBoardDto board)
    {
        if (board.Tasks.Count == 0) return 0;
        return Math.Round((double)board.Tasks.Count(t => t.Status == TaskItemStatus.Done) / board.Tasks.Count * 100, 1);
    }

    private double GetBoardOnTimeCompletionRate(TaskBoardDto board)
    {
        var completedTasks = board.Tasks.Count(t => t.Status == TaskItemStatus.Done);
        if (completedTasks == 0) return 0;

        var onTimeTasks = board.Tasks.Count(t =>
        t.Status == TaskItemStatus.Done &&
        (!t.DueDate.HasValue || t.DueDate.Value.Date >= DateTime.Today));

        return Math.Round((double)onTimeTasks / completedTasks * 100, 1);
    }
}
